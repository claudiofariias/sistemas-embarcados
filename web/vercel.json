{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Content-Security-Policy": "connect-src 'self' wss://broker.hivemq.com wss://broker.hivemq.com:8884 wss://broker.hivemq.com:8883 wss://broker.emqx.io:8084",
        "Access-Control-Allow-Origin": "*"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/public/$1",
      "headers": {
        "Content-Security-Policy": "connect-src 'self' wss://broker.hivemq.com wss://broker.hivemq.com:8884 wss://broker.hivemq.com:8883 wss://broker.emqx.io:8084",
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}